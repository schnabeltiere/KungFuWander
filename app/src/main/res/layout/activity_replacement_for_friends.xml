<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnStartHiking"
        android:layout_width="121dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="Start Hiking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSteps"
        android:layout_width="384dp"
        android:layout_height="185dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="19dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tvHikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStopHiking"
        android:layout_width="128dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="12dp"
        android:text="Stop Hiking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHikes"
        android:layout_width="381dp"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="27dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTestChart"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="13dp"
        android:text="TestChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStopHiking" />

    <Button
        android:id="@+id/btnCompareFriends"
        android:layout_width="94dp"
        android:layout_height="53dp"
        android:layout_below="@id/btnStartHiking"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:text="Compare Friends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartHiking" />

    <Button
        android:id="@+id/btnRename"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="19dp"
        android:text="Rename "
        app:layout_constraintEnd_toStartOf="@+id/btnStopHiking"
        app:layout_constraintStart_toEndOf="@+id/btnStartHiking"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNameRename"
        android:layout_width="129dp"
        android:layout_height="43dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/btnTestChart"
        app:layout_constraintStart_toEndOf="@+id/btnCompareFriends"
        app:layout_constraintTop_toBottomOf="@+id/btnStartHiking" />

</android.support.constraint.ConstraintLayout>